from tkinter import *


class StopLight:
    def __init__(self):
        window = Tk()
        window.title("Stop Light Simulation")

        # Creates the Stop Light circles and positions them
        self.canvas = Canvas(window, width=350, height=500, bg="white")
        self.canvas.pack()

        self.red_light = self.canvas.create_oval(116, 65, 233, 165, fill="white", outline="black", width=2)
        self.yellow_light = self.canvas.create_oval(116, 180, 233, 280, fill="white", outline="black", width=2)
        self.green_light = self.canvas.create_oval(116, 295, 233, 395, fill="white", outline="black", width=2)

        # Creates the radio buttons on the bottom of the window
        frame1 = Frame(window)
        frame1.pack()
        self.selected_color = StringVar()

        rbRed = Radiobutton(frame1, text="Red", bg="white", variable=self.selected_color, value="red",
                            command=self.update_lights)
        rbRed.grid(row=6, column=1)

        rbYellow = Radiobutton(frame1, text="Yellow", bg="white", variable=self.selected_color, value="yellow",
                               command=self.update_lights)
        rbYellow.grid(row=6, column=2)

        rbGreen = Radiobutton(frame1, text="Green", bg="white", variable=self.selected_color, value="green",
                              command=self.update_lights)
        rbGreen.grid(row=6, column=3)

        window.mainloop()


    #Allows the user to select a radio button and the specific cirle on the stop light lights up
    def update_lights(self):
        color = self.selected_color.get()
        self.canvas.itemconfig(self.red_light, fill="white")

        self.canvas.itemconfig(self.yellow_light, fill="white")
        self.canvas.itemconfig(self.green_light, fill="white")

        if color == "red":
            self.canvas.itemconfig(self.red_light, fill="red")
            self.canvas.itemconfig(self.yellow_light, fill="white")
            self.canvas.itemconfig(self.green_light, fill="white")

        elif color == "yellow":
            self.canvas.itemconfig(self.yellow_light, fill="yellow")
            self.canvas.itemconfig(self.red_light, fill="white")
            self.canvas.itemconfig(self.green_light, fill="white")
        elif color == "green":
            self.canvas.itemconfig(self.green_light, fill="green")
            self.canvas.itemconfig(self.yellow_light, fill="white")
            self.canvas.itemconfig(self.red_light, fill="white")

StopLight()
